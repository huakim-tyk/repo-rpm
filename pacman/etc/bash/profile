PATH=/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/bin:/usr/local/sbin:/usr/games:/usr/local/games
export PATH
alias sudo='sudo '
shopt -s globstar
shopt -s expand_aliases

export ZYPP_SINGLE_RPMTRANS=1
export ZYPP_MEDIANETWORK=1

zypper-reponames(){
   zypper repos | sed -n '/^#/d;/^[^|]*|/{s/^[^|]*|//;s/|.*//p;}'
}
